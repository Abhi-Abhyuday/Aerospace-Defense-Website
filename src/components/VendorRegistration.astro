        {value: 'State Govt', label: 'State Govt'},
        {value: 'PSUs', label: 'PSUs'},
        {value: 'Private', label: 'Private'},
        {value: 'Others', label: 'Others'}
    ], 'Select registrations', true);
    
    createMultiSelect('industry-domain', [
