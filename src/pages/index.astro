<Layout 
    title="Abhyuday Bharat Defense - Strength. Innovation. Security." 
    description="Pioneering India's defense future with advanced, resilient, and intelligent systems."
>
    <!-- Add each component in the desired order -->
    <Navbar />
    <main>
        <Hero />
        <About />
        <MissionVision />
        <SMEHelpdesk />
        <Projects />
        <NewsEvents />
        <Contact />
    </main>
    <Footer />
</Layout>

